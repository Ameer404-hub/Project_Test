<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.project_test">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/applogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project_Test">
        <activity android:name=".QuickTutorial"></activity>
        <activity android:name=".EditPurchaseItem" />
        <activity android:name=".OtherMembers" />
        <activity
            android:name=".PurchaseList"
            android:noHistory="true" />
        <activity
            android:name=".EditProfileActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".VerifyOTP"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".SignUp"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".About" />
        <activity
            android:name=".PlaceItems"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".JoinOthers"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".HomeScreen" />
        <activity
            android:name=".ProfileScreen"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".LaunchScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".FirebaseMessagingService"
            android:permission="TODO"
            tools:ignore="ExportedService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>