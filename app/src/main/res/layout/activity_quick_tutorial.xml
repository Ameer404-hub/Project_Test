<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Project_Test"
        android:background="@color/ToolbarColorPrimary"
        app:titleTextColor="#FFFFFF">

        <ImageView
            android:id="@+id/goBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/TextColorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_title"
            android:text="Quick Tutorial"
            android:layout_gravity="start"
            android:fontFamily="@font/muli_black"
            android:textSize="@dimen/TextsizeToolbar"
            android:textColor="@color/TextColorPrimary" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <TextView
                    android:id="@+id/howWorks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="15dp"
                    android:fontFamily="@font/muli"
                    android:textAllCaps="false"
                    android:text="How it works ?"
                    android:textColor="@color/TextColorPrimary"
                    android:textSize="@dimen/TextsizeButton" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <TextView
                    android:id="@+id/howProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="15dp"
                    android:fontFamily="@font/muli"
                    android:textAllCaps="false"
                    android:text="How can I update my profile ?"
                    android:textColor="@color/TextColorPrimary"
                    android:textSize="@dimen/TextsizeButton" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <TextView
                    android:id="@+id/howPlaceitem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="15dp"
                    android:fontFamily="@font/muli"
                    android:textAllCaps="false"
                    android:text="How to place an item in purchases list ?"
                    android:textColor="@color/TextColorPrimary"
                    android:textSize="@dimen/TextsizeButton" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <TextView
                    android:id="@+id/howUpdateitem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="15dp"
                    android:fontFamily="@font/muli"
                    android:textAllCaps="false"
                    android:text="How can I update an item's status ?"
                    android:textColor="@color/TextColorPrimary"
                    android:textSize="@dimen/TextsizeButton" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <TextView
                    android:id="@+id/howJoin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="15dp"
                    android:fontFamily="@font/muli"
                    android:textAllCaps="false"
                    android:text="How can I join other members ?"
                    android:textColor="@color/TextColorPrimary"
                    android:textSize="@dimen/TextsizeButton" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <TextView
                    android:id="@+id/howSeeMembers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="15dp"
                    android:fontFamily="@font/muli"
                    android:textAllCaps="false"
                    android:text="Where I can find other members that I have joined ?"
                    android:textColor="@color/TextColorPrimary"
                    android:textSize="@dimen/TextsizeButton" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/howMyitems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:padding="15dp"
                        android:fontFamily="@font/muli"
                        android:textAllCaps="false"
                        android:text="Where I can find all items that I have placed or purchased ?"
                        android:textColor="@color/TextColorPrimary"
                        android:textSize="@dimen/TextsizeButton" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E8E8E8"
                        />

                    <TextView
                        android:id="@+id/howMyitems_decs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_gravity="start"
                        android:padding="15dp"
                        android:fontFamily="@font/muli"
                        android:textAllCaps="false"
                        android:text="You can find all of your placed and purchased items in the 'My Items' section available in the side navigation menu."
                        android:textColor="@color/TextColorPrimary"
                        android:textSize="@dimen/TextsizeButton" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>



        </LinearLayout>

    </ScrollView>



</LinearLayout>