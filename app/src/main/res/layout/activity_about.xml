<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ScreenBGcolorPrimary"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.Project_Test"
        android:background="@color/ToolbarColorPrimary"
        app:titleTextColor="#FFFFFF">

        <ImageView
            android:id="@+id/goBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/TextColorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_title"
            android:text="About"
            android:layout_gravity="start"
            android:fontFamily="@font/muli_black"
            android:textSize="@dimen/TextsizeToolbar"
            android:textColor="@color/TextColorPrimary" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/muli_black"
        android:text="Application"
        android:textColor="@color/TextColorPrimary"
        android:textSize="@dimen/TextsizeToolbar" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:columnCount="2"
        android:fadingEdge="none"
        android:rowCount="5">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:srcCompat="@drawable/applogo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:fontFamily="@font/muli"
            android:text="Daily Purchases Manager"
            android:textColor="@color/TextColorPrimary"
            android:textSize="@dimen/TextsizePrimary" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:layout_marginLeft="10dp"
            app:tint="@color/TextColorPrimary"
            app:srcCompat="@drawable/ic_baseline_app_info_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:fontFamily="@font/muli"
            android:text="Version 1.1.7"
            android:textColor="@color/TextColorPrimary"
            android:textSize="@dimen/TextsizePrimary" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            app:tint="@color/TextColorPrimary"
            app:srcCompat="@drawable/ic_baseline_star_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:fontFamily="@font/muli"
            android:text="Rate App"
            android:textColor="@color/TextColorPrimary"
            android:textSize="@dimen/TextsizePrimary" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:layout_marginLeft="10dp"
            app:tint="@color/TextColorPrimary"
            app:srcCompat="@drawable/ic_baseline_privacy_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:fontFamily="@font/muli"
            android:text="Privacy Policy"
            android:textColor="@color/TextColorPrimary"
            android:textSize="@dimen/TextsizePrimary" />

    </GridLayout>

    <View
        android:layout_height="1dp"
        android:background="#CACACA"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/muli_black"
        android:text="Developer"
        android:textColor="@color/TextColorPrimary"
        android:textSize="@dimen/TextsizeToolbar" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:columnCount="2"
        android:rowCount="5">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_baseline_person__24"
            app:tint="@color/TextColorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:fontFamily="@font/muli"
            android:text="Ameer Abdullah Naveed"
            android:textColor="@color/TextColorPrimary"
            android:textSize="@dimen/TextsizePrimary" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:layout_marginLeft="10dp"
            app:tint="@color/TextColorPrimary"
            app:srcCompat="@drawable/ic_baseline_email_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:text="ameerabdulalnaveed455@gmail.com"
            android:textColor="@color/TextColorPrimary"
            android:textSize="@dimen/TextsizeButton" />

    </GridLayout>

</LinearLayout>